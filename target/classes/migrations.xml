            <column name="lastname" value="admin"/>
        </insert>
        <insert tableName="users">
            <column name="id" value="2"/>
            <column name="username" value="admin2"/>
            <column name="password" value="admin2"/>
            <column name="name" value="admin2"/>
            <column name="lastname" value="admin2"/>
        </insert>
        <rollback>
            <delete tableName="users">
                <where>
                    id in (1, 2)
                </where>
            </delete>
        </rollback>
    </changeSet>
    
